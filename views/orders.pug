html
    head
        title= 'All orders'

        link(
            rel='stylesheet'
            href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'
        )

    body
        div(class='container')
            h1= 'All orders'

            div(class='row')
                //- pre= otherOrders

                table(class='table')
                    tr
                        th= 'Order No'
                        th= 'Price'
                        th= 'Order'

                    each order, index in orders
                        tr
                            th= index + 1
                            td= order.price
                            td
                                each loads in order.trucks
                                    p= `Truck ID: ${loads.truckID} with ${loads.load.length} packages`

